{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "controllers/**",
          "middlewares/**",
          "models/**",
          "routes/**",
          "utils/**"
        ],
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "index.js",
      "methods": ["GET", "POST", "PUT", "PATCH", "DELETE"]
    },
    {
      "src": "/(.*)",
      "status": 404,
      "dest": "index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}